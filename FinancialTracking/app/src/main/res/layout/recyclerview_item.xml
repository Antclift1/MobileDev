<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="#ffffff"
    android:elevation="5dp"
    >
    <android.support.constraint.ConstraintLayout
        android:id="@+id/recycler_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/editGrid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    <TextView
        android:id="@+id/itemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/itemAmount"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_weight="2"
         />
    <TextView
        android:id="@+id/itemAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/itemType"
        app:layout_constraintLeft_toRightOf="@+id/itemName"
        app:layout_constraintHorizontal_weight="1"
         />
    <TextView
        android:id="@+id/itemType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/itemDate"
        app:layout_constraintLeft_toRightOf="@+id/itemAmount"
        app:layout_constraintHorizontal_weight="1"
         />
    <TextView
        android:id="@+id/itemDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/itemType"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1"
         />
    </android.support.constraint.ConstraintLayout>
    <GridLayout
        android:id="@+id/editGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:rowCount="3"
        android:columnCount="2"
        app:layout_constraintTop_toBottomOf="@+id/recycler_wrapper"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20pt"
            android:textStyle="bold"
            android:text="I paid:"
            android:layout_gravity="right"/>

        <com.blackcat.currencyedittext.CurrencyEditText
            android:id="@+id/edit_record_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20pt"
            android:textStyle="bold"
            android:inputType="numberDecimal"
            android:layout_gravity="left"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20pt"
            android:textStyle="bold"
            android:text="For:"
            android:layout_gravity="right"/>

        <EditText
            android:id="@+id/edit_record_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:textSize="20pt"
            android:textStyle="bold"
            android:hint="Name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20pt"
            android:textStyle="bold"
            android:text="It is:"
            android:layout_gravity="right"/>

        <Spinner
            android:id="@+id/edit_record_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20pt"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/save_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Save"
            android:layout_gravity="center"
           />
        <Button
            android:id="@+id/delete_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Delete"
            android:layout_gravity="center"
            />
    </GridLayout>
</android.support.constraint.ConstraintLayout>
